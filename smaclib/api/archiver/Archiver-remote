import sys
import pprint
from urlparse import urlparse
from thrift.transport import TTransport
from thrift.transport import TSocket
from thrift.transport import THttpClient
from thrift.protocol import TBinaryProtocol

import Archiver
from ttypes import *

if len(sys.argv) <= 1 or sys.argv[1] == '--help':
  print ''
  print 'Usage: ' + sys.argv[0] + ' [-h host:port] [-u url] [-f[ramed]] function [arg1 [arg2...]]'
  print ''
  print 'Functions:'
  print '  URI request_upload_slot()'
  print '  void abort_upload(UploadID upload_id)'
  print '  AssetID archive_upload(TalkID talk_id, UploadID upload_id, FileInfo file_info)'
  print '  TaskID encode_video(AssetID video_id, EncodingInfo encoding_info)'
  print ''
  sys.exit(0)

pp = pprint.PrettyPrinter(indent = 2)
host = 'localhost'
port = 9090
uri = ''
framed = False
http = False
argi = 1

if sys.argv[argi] == '-h':
  parts = sys.argv[argi+1].split(':')
  host = parts[0]
  port = int(parts[1])
  argi += 2

if sys.argv[argi] == '-u':
  url = urlparse(sys.argv[argi+1])
  parts = url[1].split(':')
  host = parts[0]
  if len(parts) > 1:
    port = int(parts[1])
  else:
    port = 80
  uri = url[2]
  if url[4]:
    uri += '?%s' % url[4]
  http = True
  argi += 2

if sys.argv[argi] == '-f' or sys.argv[argi] == '-framed':
  framed = True
  argi += 1

cmd = sys.argv[argi]
args = sys.argv[argi+1:]

if http:
  transport = THttpClient.THttpClient(host, port, uri)
else:
  socket = TSocket.TSocket(host, port)
  if framed:
    transport = TTransport.TFramedTransport(socket)
  else:
    transport = TTransport.TBufferedTransport(socket)
protocol = TBinaryProtocol.TBinaryProtocol(transport)
client = Archiver.Client(protocol)
transport.open()

if cmd == 'request_upload_slot':
  if len(args) != 0:
    print 'request_upload_slot requires 0 args'
    sys.exit(1)
  pp.pprint(client.request_upload_slot())

elif cmd == 'abort_upload':
  if len(args) != 1:
    print 'abort_upload requires 1 args'
    sys.exit(1)
  pp.pprint(client.abort_upload(eval(args[0]),))

elif cmd == 'archive_upload':
  if len(args) != 3:
    print 'archive_upload requires 3 args'
    sys.exit(1)
  pp.pprint(client.archive_upload(eval(args[0]),eval(args[1]),eval(args[2]),))

elif cmd == 'encode_video':
  if len(args) != 2:
    print 'encode_video requires 2 args'
    sys.exit(1)
  pp.pprint(client.encode_video(eval(args[0]),eval(args[1]),))

else:
  print 'Unrecognized method %s' % cmd
  sys.exit(1)

transport.close()
